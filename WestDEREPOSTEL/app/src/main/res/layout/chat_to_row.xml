<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/idUserImageTo"
        android:layout_width="50dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        android:layout_height="50dp"
        android:background="@color/material_on_primary_emphasis_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/idMessageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#A0FDB7"
        android:maxWidth="230dp"
        android:padding="4dp"
        android:text="Another message, yes yes yeeees! that will wrap on multiple lines. and hii"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/idUserImageTo"
        app:layout_constraintTop_toTopOf="@+id/idUserImageTo" />

</androidx.constraintlayout.widget.ConstraintLayout>
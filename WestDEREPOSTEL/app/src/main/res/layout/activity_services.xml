<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ServicesActivity">

    <!-- TODO: Update blank activity -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/services_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:subtitle="All Services of the Delegation"
        app:title="SERVICES"
        app:titleMarginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




        <androidx.cardview.widget.CardView
            android:id="@+id/idDelegateChambers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/services_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/idGeneralAffairsBtn"
            app:layout_constraintBottom_toTopOf="@id/idNetworkSecurityBtn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_stroke"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_attach_email_24"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delegate_s_chambers"
                    android:gravity="center"
                    android:fontFamily="@font/googlesans_bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idGeneralAffairsBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/services_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/idDelegateChambers"
            app:layout_constraintBottom_toTopOf="@id/idElectronicCommunicationsBtn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_stroke"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_emoji_people_24"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general_affairs"
                    android:gravity="center"
                    android:fontFamily="@font/googlesans_bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idNetworkSecurityBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/idDelegateChambers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/idElectronicCommunicationsBtn"
            app:layout_constraintBottom_toTopOf="@id/idFollowUpBtn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_stroke"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_phonelink_lock_24"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/network_security"
                    android:fontFamily="@font/googlesans_bold"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idElectronicCommunicationsBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:layout_constraintStart_toEndOf="@id/idNetworkSecurityBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idGeneralAffairsBtn"
            app:layout_constraintBottom_toTopOf="@id/idBrigadeBtn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_stroke"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_perm_phone_msg_24"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/electronic_communications"
                    android:fontFamily="@font/googlesans_bold"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idFollowUpBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/idBrigadeBtn"
            app:layout_constraintTop_toBottomOf="@id/idNetworkSecurityBtn"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_stroke"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_mark_email_read_24"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_up_and_postal_activities"
                    android:fontFamily="@font/googlesans_bold"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idBrigadeBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            app:layout_constraintStart_toEndOf="@id/idFollowUpBtn"
            app:layout_constraintTop_toBottomOf="@id/idElectronicCommunicationsBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_stroke"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_baseline_security_24"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/regional_brigade"
                    android:fontFamily="@font/googlesans_bold"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>